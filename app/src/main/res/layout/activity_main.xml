<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        app:srcCompat="@drawable/bg_bright" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/img_suitmedia"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="80dp"/>
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/img_bg_bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/greeting"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello,"
            android:textSize="28sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_username"
            android:text="Armando"
            android:textSize="28sp"
            android:textColor="@color/colorOrange"
            android:textStyle="bold"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <Button
            android:id="@+id/choose_event_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Event"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_bg"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/choose_guest_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Guest"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_bg"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignBottom="@id/greeting"
        android:layout_alignTop="@id/greeting"
        android:layout_alignParentRight="true">

        <View
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:background="@color/colorOrange"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="right"/>
        <View
            android:layout_width="220dp"
            android:layout_height="2dp"
            android:background="@color/colorOrange"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="right"/>
        <View
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:background="@color/colorOrange"
            android:layout_marginTop="5dp"
            android:layout_gravity="right"/>

    </LinearLayout>

</RelativeLayout>